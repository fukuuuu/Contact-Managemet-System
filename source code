#include<stdio.h>

#include<process.h>

int main()
{
    int ch;  // choices
    
    system("cls");    // main menu

    printf("\n\t **** Welcome to Contact Management System ****");

    main:

    printf("\n_________________________________________________________________");

    printf("\n\n\t\t\tMAIN MENU\n\t\t==========================");
    printf("\n\t\t[1] Add a new Contact\n\t\t[2] List all Contacts\n\t\t[3] Search for contact\n\t\t[4] Edit a Contact\n\t\t[5] Delete a Contact\n\t\t[0] Exit");
    printf("\n\t\t==========================\n\t\t");
    printf("\n_________________________________________________________________");

    printf("\n\nEnter the choice:");

    scanf("%d", &ch);

    switch(ch)
    {
        case 0:

            printf("\n\t\tExiting the program...?");
            break;
    }

    printf("\n\n\t\t[1] Main Menu\t[0] Exit\n");
    printf("\n\nEnter choice:");

    scanf("%d", &ch);

    switch (ch)

    {
        case 1:

            goto main;

        case 0:

            printf("Exit the program");
            break;

        default:

            printf("Invalid choice");

            break;
    }
    return 0;
}
